---
import { Image } from 'astro:assets';

interface Props {
  title: string;
  cover: ImageMetadata;
  previews: ImageMetadata[];
}

const { title, cover, previews } = Astro.props;
const limitedPreviews = previews.slice(0, 9);
---

<div class="group relative overflow-visible rounded-xl shadow-lg hover:shadow-xl transition-all duration-300 bg-white dark:bg-gray-700">
  <div class="relative w-full h-72 md:h-80 lg:h-96">
    <Image
      src={cover}
      alt={`${title} Cover`}
      width={600}
      height={600}
      class="w-full h-full object-cover rounded-t-xl"
    />
    <div class="absolute inset-0 opacity-0 group-hover:opacity-100 transition-all duration-300 group-hover:scale-95 group-hover:-translate-x-2 group-hover:translate-y-2 group-hover:rotate-[-2deg] z-10">
      <div class="grid grid-cols-2 sm:grid-cols-3 gap-2 p-2">
        {limitedPreviews.map((preview, index) => (
          <div class="relative aspect-square">
            <Image
              src={preview}
              alt={`Preview ${index + 1}`}
              width={400}
              height={400}
              class="w-full h-full object-cover rounded-lg shadow-md transform transition-all duration-300 origin-center hover:scale-105 hover:z-20 hover:shadow-lg"
            />
          </div>
        ))}
      </div>
    </div>
  </div>
  <div class="absolute inset-x-0 bottom-0 bg-gradient-to-t from-black/70 to-transparent p-4 md:p-6 lg:p-8 rounded-b-xl">
    <h3 class="text-lg md:text-xl lg:text-2xl font-semibold text-white">{title}</h3>
  </div>
</div>

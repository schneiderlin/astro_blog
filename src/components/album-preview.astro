---
import { Image } from 'astro:assets';

interface Props {
  title: string;
  cover: ImageMetadata;
  previews: ImageMetadata[];
}

const { title, cover, previews } = Astro.props;
---

<div class="group relative overflow-hidden rounded-lg shadow-lg hover:shadow-xl transition-shadow duration-300">
  <div class="relative">
    <Image
      src={cover}
      alt={`${title} Cover`}
      width={600}
      height={600}
      class="w-full h-72 md:h-80 lg:h-96 object-cover transition-all duration-300 group-hover:scale-105"
    />
    <div class="absolute inset-0 bg-black/50 flex items-center justify-center opacity-0 group-hover:opacity-100 transition-opacity duration-300">
      <div class="grid grid-cols-2 gap-4">
        {previews.map((preview, index) => (
          <Image
            src={preview}
            alt={`Preview ${index + 1}`}
            width={200}
            height={200}
            class={`w-full h-40 md:h-48 lg:h-56 object-cover rounded-lg shadow-lg transform transition-transform duration-300 ${
              index === 0 ? 'group-hover:translate-x-4 group-hover:-translate-y-4' :
              index === 1 ? 'group-hover:translate-x-8 group-hover:translate-y-8' :
              index === 2 ? 'group-hover:-translate-x-4 group-hover:translate-y-4' :
              'group-hover:-translate-x-8 group-hover:-translate-y-8'
            }`}
          />
        ))}
      </div>
    </div>
  </div>
  <div class="absolute inset-x-0 bottom-0 bg-gradient-to-t from-black/70 to-transparent p-4 md:p-6 lg:p-8">
    <h3 class="text-lg md:text-xl lg:text-2xl font-semibold text-white">{title}</h3>
  </div>
</div>

---
import { Image } from 'astro:assets';

interface Props {
  title: string;
  cover: ImageMetadata;
  previews: ImageMetadata[];
}

const { title, cover, previews } = Astro.props;
---

<div class="group relative overflow-visible rounded-xl shadow-lg hover:shadow-xl transition-all duration-300 bg-white dark:bg-gray-700">
  <div class="relative w-full h-72 md:h-80 lg:h-96">
    <Image
      src={cover}
      alt={`${title} Cover`}
      width={600}
      height={600}
      class="w-full h-full object-cover rounded-t-xl"
    />
    <div class="absolute inset-0 opacity-0 group-hover:opacity-100 transition-all duration-300 group-hover:-translate-y-full">
      <div class="flex flex-col-reverse items-center">
        {previews.map((preview, index) => (
          <Image
            src={preview}
            alt={`Preview ${index + 1}`}
            width={600}
            height={600}
            class={`w-full h-72 md:h-80 lg:h-96 object-cover rounded-xl shadow-lg transform transition-all duration-300 ${
              index === 0 ? 'translate-y-0 group-hover:-translate-y-4' :
              index === 1 ? 'translate-y-full group-hover:-translate-y-8' :
              index === 2 ? 'translate-y-[200%] group-hover:-translate-y-12' :
              'translate-y-[300%] group-hover:-translate-y-16'
            } absolute inset-0`}
          />
        ))}
      </div>
    </div>
  </div>
  <div class="absolute inset-x-0 bottom-0 bg-gradient-to-t from-black/70 to-transparent p-4 md:p-6 lg:p-8 rounded-b-xl">
    <h3 class="text-lg md:text-xl lg:text-2xl font-semibold text-white">{title}</h3>
  </div>
</div>

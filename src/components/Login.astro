---
import { SignedIn, SignedOut, UserButton, SignInButton } from "@clerk/astro/components";
---

<SignedOut>
  <SignInButton mode="modal" class="bg-blue-500 hover:bg-blue-600 text-white font-bold py-2 px-4 rounded transition duration-300" />
</SignedOut>
<SignedIn>
  <UserButton 
    appearance={{
      elements: {
        avatarBox: "w-10 h-10",
        userButtonAvatarBox: "w-10 h-10"
      }
    }} 
  />
</SignedIn>